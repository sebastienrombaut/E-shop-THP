
		<section>
			<div class="container">
				<div class="row">
	               	<div id="signup" class="login col-md-6 col-md-offset-3 col-sm-12">
	                    <div class="panel panel-default shadow">
	                        <div class="panel-heading">
	                            <div class="panel-title h3">Editer ce produit
	                                
	                            </div>
	                        </div>
	                    </div>
	                    <%= render 'form' %>

	                    <div class="panel-body">
	                    	<%= form_for(@item, multipart: true, :class => "form-horizontal") do |f| %>
	                      
	                            <div class="form-group">
	                                <div class="col-md-12">
	                                	<%= f.label :title, "Titre", :style=>"display:block" %>
	                                	 <%= f.text_field :title, :class => "form-control"%>
	                                </div>
	                            </div>
	                            <div class="form-group my-3">
	                                <div class="col-md-12" style="margin-top: 30px">
	                                	<%= f.label :photo, "URL", :style=>"display:block"  %>
	                                	 <%= f.file_field :photo, :class => "form-control"%>
	                                </div>
	                            </div>

	                            <div class="form-group">
	                                <div class="col-md-12" style="margin-top: 30px">
	                                	<%= f.label :description, "Description", :style=>"display:block"   %>
	                                	 <%= f.text_area :description, :class => "form-control" %>
	                                </div>
	                            </div>
	                            <div class="form-group">
	                                <div class="col-md-12" style="margin-top: 30px">
	                                	<%= f.label :price, "Prix", :style=>"display:block"  %>
	                                	
	                                	 <%= f.number_field :price, :class => "form-control", :step => 0.01 %>
	                                </div>
	                            </div>	                            

	                            <div class="form-group">
	                                <div class="col-md-12" style="margin-top: 30px">
	                                	<%= f.label :featured, "Featured ?", :style=>"display:block"  %>
	                                	 <%= f.check_box :featured , :class => "form-control" %>
	                                </div>
	                            </div>


	                            
	                            <div class="form-group">
	                                <!-- Button -->
	                                <div class="col-sm-12 login-btn">

                            <%= f.submit "Valider", :class => "btn btn-primary"%>

	                                </div>
	                            </div>
	                        <% end %>
	                    </div>

	                   

	                    <%= link_to "Supprimer ce produit", item_path(@item),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              :class => "btn btn-primary btn-lg text-center float-right",
              :style => "background-color: red;" %>

	                </div>
	            </div>
				</div>
			</div>
		</section>
